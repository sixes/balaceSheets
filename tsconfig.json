{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "module": "commonjs", // Use CommonJS for Electron main process
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"], // Include both src/main and src/renderer
  "exclude": ["node_modules"]
}
